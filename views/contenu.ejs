<!DOCTYPE html>
<html>
<head>
    <title>Contenu</title>
    <% include template/header.ejs %>
    <script src="../ckeditor/ckeditor.js"></script>

</head>
<body>
<header>
    <% include template/navBar.ejs %>
</header>
<div class="container ">
        <div class="row">
            <div class="col-sm-12">
                <ul class="nav nav-tabs">
                    <%  liste.forEach(function (doc){ %>
                    <li><a data-toggle="tab" href="#<%= doc._id %>"><%= doc.titre %></a></li>
                    <% }) %>
                    <li><a data-toggle="tab" href="#Ajout">ajouter articles ou une rubrique</a></li>
                </ul>
            </div> <% //Div navigation tabbed panel %>

            <div class="tab-content">
                <% liste.forEach(function (doc){ %>
                <div id="<%= doc._id %>" class="tab-pane">
                    <br><br><br>
                    <div class="col-sm-10">
                        <div class="row">
                            <% doc.articles.forEach(function(art){ %>
                            <div class="col-sm-12">
                                <a href="/deleteArticle?titre=<%=doc.titre%>&id=<%=art._id%>" onclick="return confirm('Ãªtes vous sur de vouloir supprimer cet Article ?');"> Supprimer</a>
                                <a href="/editer?titre=<%=doc.titre%>&id=<%=art._id%>">Editer</a>
                                <div class="well">
                                    <h2><%= art.titre %></h2>
                                    <p><%- art.contenu %></p>
                                </div>
                            </div>
                            <%})%>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% // Affichage des articles %>


                <div id="Ajout" class="tab-pane">
                    <br><br><br>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-12">
                                <form action="/addArticle" method="post">
                                    <div class="well">
                                        <h2>Ajouter un article</h2>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <label for="nomRubrique">Rubrique:</label>
                                                    <select class="form-control" name="nomRubrique">
                                                        <% liste.forEach(function (doc) { %>
                                                        <option><%= doc.titre %></option>
                                                        <%})%>
                                                    </select>
                                                </div>
                                                <div class="col-sm-8">
                                                    <label>Titre:</label>
                                                    <input type="text" class="form-control" name="titreA">
                                                </div>
                                            </div>
                                            <br>
                                            <label for="summernote">Contenu:</label>
                                            <textarea cols="10" id="Contenu" name="Contenu" rows="10" >Mon editeur de texte</textarea>

                                            <script>
                                                //Ajout d'uploadcare a mon editeur de texte ckeditor
                                                UPLOADCARE_PUBLIC_KEY = 'demopublickey';
                                                CKEDITOR.replace( 'Contenu' , {
                                                    extraPlugins: 'uploadcare',
                                                    uploadcare: {
                                                        multiple: true
                                                    }
                                                });

                                            </script>
                                            <div align="center">
                                                <button type="submit" class="btn btn-default" >Ajouter l'article</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>


                                </div>

                            </div>
                         </div>
                    </div>
                </div>
            </div> <% //Div panels %>
        </div>
</div>
</body>
</html>